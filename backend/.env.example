# 数据库
DATABASE_URL=postgresql://postgres:password@localhost:5432/openrag
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT_SECONDS=30
DB_POOL_RECYCLE_SECONDS=1800

# JWT
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI (用于 Embedding 与 LLM)
# 请求 OpenAI 时自动使用当前环境的 HTTP_PROXY/HTTPS_PROXY，无需在此单独配置
OPENAI_API_KEY=sk-your-openai-api-key
RAG_LLM_MODEL=gpt-4o-mini
RAG_EMBEDDING_MODEL=text-embedding-3-small
RAG_TOP_K_MAX=20
# 单次 OpenAI 请求超时(秒)，避免无代理时挂死
OPENAI_REQUEST_TIMEOUT=60

# 应用
APP_NAME=OpenRAG
DEBUG=true
API_V1_PREFIX=/api
ALLOWED_ORIGINS=http://localhost:3000
# RAG 检索+生成较耗时，建议 120；若仍超时可改为 180
REQUEST_TIMEOUT_SECONDS=120
MAX_UPLOAD_FILE_SIZE_MB=25
ALLOW_DESTRUCTIVE_MIGRATIONS=false
